<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient base -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4C7789"
                android:centerColor="#80B7CA"
                android:endColor="#9DCEE4"
                android:angle="45"/>
        </shape>
    </item>

    <!-- Optional tech lines or grid overlay -->
    <item android:drawable="@drawable/circuit_overlay" />
</layer-list>
